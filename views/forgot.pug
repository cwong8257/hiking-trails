extends layouts/layout

block content
  h3.font-weight-light.text-center.mb-4 Reset your password
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card
        .card-body
          form.mb-2(action="/forgot" method="POST")
            .form-group
              label(for="email") Enter your email address and we will send you a link to reset your password.
              input.form-control(type="email" name="email" id="email" autofocus required)
            button.btn.btn-primary.btn-block Send password reset email