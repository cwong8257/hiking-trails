extends layouts/layout

block content
  h1.text-center.mb-4 Forgot Password
  .row
    .col-sm-8.col-md-6.col-lg-4.mx-auto
      form.mb-2(action="/forgot" method="POST")
        .form-group
          label(for="email") Email
          input.form-control(type="email" name="email" id="email" autofocus required)
        button.btn.btn-lg.btn-primary.btn-block Reset Password
      a(href="/trails") Go back