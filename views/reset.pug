extends layouts/layout

block content
  h1.text-center.mb-4 Reset Password
  .row
    .col-sm-8.col-md-6.col-lg-4.mx-auto
      form.mb-2(action=`/reset/${resetPasswordToken}` method="POST")
        .form-group
          label(for="password") New Password
          input.form-control(type="password" name="password" id="password" autofocus required)
        .form-group
          label(for="confirm") Confirm Password
          input.form-control(type="password" name="confirm" id="confirm" required)
        button.btn.btn-lg.btn-primary.btn-block Reset Password
      a(href="/trails") Go back