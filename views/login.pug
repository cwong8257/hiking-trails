extends layouts/layout

block content
  h1.text-center.mb-4 Login!
  .row
    .col-sm-8.col-md-6.col-lg-4.mx-auto
      form.mb-2(action="/login" method="POST")
        .form-group
          label(for="username") Username
          input.form-control(type="text" name="username" id="username" autofocus required)
        .form-group
          label(for="password") Password
          input.form-control(type="password" name="password" id="password" required)
        button.btn.btn-lg.btn-primary.btn-block Login
      a(href="/trails") Go back